    timeout = 5
    urgency = normal

# Ignore certain low-priority notifications
# Skip notifications that are not important
[ignore-low-priority]
    msg_urgency = low
    format = ""

# Custom format for application-specific notifications
# Example: Custom format for specific apps
[custom-format]
    appname = "CustomApp"
    format = "<b>%a</b> - %s\n%b"
    timeout = 5

