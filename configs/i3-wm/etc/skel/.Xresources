! Configurações de DPI e Antialiasing
Xft.dpi: 96
Xft.antialias: true
Xft.hinting: true
Xft.rgba: rgb
Xft.autohint: false
Xft.hintstyle: hintslight
Xft.lcdfilter: lcddefault

! Cores do terminal
xterm*background: #1E1E1E
xterm*foreground: #C5C8C6
xterm*cursorColor: #51C0BF
xterm*pointerColor: #51C0BF

! Cores personalizadas
xterm*color0: #1E1E1E
xterm*color1: #FF6C6B
xterm*color2: #A8FF60
xterm*color3: #FFD700
xterm*color4: #6A99FF
xterm*color5: #FF79C6
xterm*color6: #51C0BF
xterm*color7: #C5C8C6
xterm*color8: #7B7B7B
xterm*color9: #FF6C6B
xterm*color10: #A8FF60
xterm*color11: #FFD700
xterm*color12: #6A99FF
xterm*color13: #FF79C6
xterm*color14: #51C0BF
xterm*color15: #FFFFFF

! Configurações do cursor e do scroll
xterm*scrollBar: false
xterm*cursorBlink: true
xterm*saveLines: 10000

! Fontes
xterm*faceName: Terminus
xterm*faceSize: 14
xterm*boldFace: Terminus:bold
xterm*boldFaceSize: 14

! Comportamento do terminal
xterm*selectToClipboard: true
xterm*VT100*translations: #override \
    Shift <Control> C: string(0x0) \n\
    Shift <Control> V: string(0x0)

! Estilo de borda e transparência
xterm*borderWidth: 0
xterm*transparent: true
xterm*shading: 20

! Configurações adicionais
xterm*geometry: 80x24
xterm*loginShell: true
xterm*depth: 32
