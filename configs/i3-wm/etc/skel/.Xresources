! DPI and Antialiasing
Xft.dpi: 96
Xft.antialias: true
Xft.hinting: true
Xft.rgba: rgb
Xft.autohint: false
Xft.hintstyle: hintslight
Xft.lcdfilter: lcddefault

! Cursor settings (consistent with GTK theme)
Xcursor.theme: Adwaita
Xcursor.size: 24

! Window title
xterm*Title: XTerm

! Window definitions
xterm*geometry: 106x54
xterm*internalBorder: 2
xterm*transparent: true
xterm*shading: 20

! Color theme (Adwaita-dark inspired)
xterm*background: #1e1e1e
xterm*foreground: #FFFFFF
xterm*cursorColor: #FFFFFF
xterm*pointerColor: #FFFFFF

! ANSI color palette (Adwaita-dark compatible)
xterm*color0: #1e1e1e
xterm*color1: #C01C28
xterm*color2: #26A269
xterm*color3: #C19C00
xterm*color4: #3584E4
xterm*color5: #A347BA
xterm*color6: #33D7B8
xterm*color7: #FFFFFF
xterm*color8: #5E5C64
xterm*color9: #F66151
xterm*color10: #33DA7A
xterm*color11: #E9AD0C
xterm*color12: #3584E4
xterm*color13: #C061CB
xterm*color14: #33D7B8
xterm*color15: #FFFFFF

! Typeface (consistent with i3-wm font configuration)
xterm*faceName: Ubuntu Mono Nerd Font
xterm*faceSize: 12
xterm*boldMode: true
xterm*boldFace: Ubuntu Mono Nerd Font:bold

! Copy-paste
XTerm.vt100.selectToClipboard: true
XTerm.vt100.threeKeyMouse: false
XTerm.vt100.metaSendsEscape: true

! Cursor configuration (advanced)
xterm*cursorBlink: true
xterm*cursorOnTime: 1000
xterm*cursorOffTime: 400
xterm*cursorColor: #FFFFFF
xterm*pointerColor: #FFFFFF
xterm*pointerColorBackground: #1e1e1e
xterm*cursorUnderline: false

! Bell configuration
xterm*visualBell: false
xterm*audibleBell: false
xterm*bellIsUrgent: true

! Scrolling and history (advanced)
xterm*saveLines: 10000
xterm*scrollBar: false
xterm*scrollLines: 1
xterm*scrollKey: true
xterm*scrollTtyOutput: false
xterm*scrollTtyKey: true

! Selection and highlighting
xterm*highlightColor: #3584E4
xterm*highlightTextColor: #FFFFFF
xterm*highlightSelection: true
xterm*selectToClipboard: true

! Window appearance (advanced)
xterm*internalBorder: 2
xterm*externalBorder: 0
xterm*borderWidth: 0
xterm*geometry: 106x54
xterm*transparent: true
xterm*shading: 20
xterm*fadeColor: #1e1e1e
xterm*titleBar: true
xterm*titleMode: 0

! Font rendering (advanced)
xterm*renderFont: true
xterm*faceNameDoublesize: false
xterm*locale: true
xterm*utf8: true
xterm*utf8Title: true
xterm*utf8Latin1: false
xterm*utf8Fonts: true

! Mouse configuration
xterm*allowSendEvents: false
xterm*allowWindowOps: false
xterm*allowMouseOps: true
xterm*eightBitInput: false
xterm*eightBitOutput: true

! Keyboard configuration
xterm*backarrowKey: false
xterm*backarrowKeyIsErase: true
xterm*deleteIsDEL: true
xterm*oldXtermFKeys: false
xterm*numLock: false
xterm*altSendsEscape: true
xterm*metaSendsEscape: true

! Terminal behavior
xterm*alwaysHighlight: false
xterm*alwaysUseMods: false
xterm*answerbackString:
xterm*autoWrap: true
xterm*autoMargin: true
xterm*cutNewline: false
xterm*cutToBeginningOfLine: false
xterm*fastScroll: false
xterm*jumpScroll: true
xterm*multiScroll: false
xterm*preeditType: OverTheSpot
xterm*reverseWrap: false
xterm*scrollOnOutput: false
xterm*scrollOnTtyOutput: false
xterm*scrollbar: false

! Color intensity
xterm*boldColors: true
xterm*colorBD: #FFFFFF
xterm*colorUL: #33D7B8
xterm*colorIT: #A347BA

! Visual feedback
xterm*pointerShape: xterm
xterm*pointerMode: 0
xterm*on2Clicks: word
xterm*on3Clicks: line
xterm*doubleClickWords: true

! Clipboard integration
xterm*selectToClipboard: true
xterm*clipToPrimary: true
xterm*keepSelection: true
