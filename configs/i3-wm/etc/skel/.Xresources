! DPI and Antialiasing
Xft.dpi: 96
Xft.antialias: true
Xft.hinting: true
Xft.rgba: rgb
Xft.autohint: false
Xft.hintstyle: hintslight
Xft.lcdfilter: lcddefault

! Cursor settings
Xcursor.theme: Pop
Xcursor.size: 24

! Window title
xterm*Title: XTerm

! Window definitions
xterm*geometry: 106x54
xterm*internalBorder: 2
xterm*transparent: true
xterm*shading: 20

! Color theme
xterm*background: #1E1E1E
xterm*foreground: #C5C8C6
xterm*cursorColor: #51C0BF
xterm*pointerColor: #51C0BF

xterm*color0: #1E1E1E
xterm*color1: #FF6C6B
xterm*color2: #A8FF60
xterm*color3: #FFD700
xterm*color4: #6A99FF
xterm*color5: #FF79C6
xterm*color6: #51C0BF
xterm*color7: #C5C8C6
xterm*color8: #7B7B7B
xterm*color9: #FF6C6B
xterm*color10: #A8FF60
xterm*color11: #FFD700
xterm*color12: #6A99FF
xterm*color13: #FF79C6
xterm*color14: #51C0BF
xterm*color15: #FFFFFF

! History and scrolling
xterm*saveLines: 10000
xterm*scrollBar: false
xterm*scrollLines: 1

! Typeface
xterm*faceName: Terminus
xterm*faceSize: 13
xterm*boldMode: true
xterm*boldFace: Terminus:bold

! Copy-paste
XTerm.vt100.selectToClipboard: true
